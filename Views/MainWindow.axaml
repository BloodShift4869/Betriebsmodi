<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Betriebsmodi.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Betriebsmodi.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Betriebsmodi">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="Auto,Auto,*" ColumnDefinitions="*, Auto, Auto">
        <!-- Title bar -->
        <TextBlock Grid.Row="0" Grid.Column="0" Margin="30, 30, 0, 10" VerticalAlignment="Center" FontSize="36"
                   Text="{Binding Mode}"
                   FontWeight="Bold" />
        <TextBlock Grid.Row="0" Grid.Column="1" Margin="0, 30, 0, 10" Text="Anzahl Kerne:" VerticalAlignment="Center" />
        <Border Grid.Row="0" Grid.Column="2" Margin="10, 30, 30, 10" Background="Aqua" Width="40" Height="40"
                VerticalAlignment="Center">
            <TextBlock FontSize="24" Text="{Binding Cores}" VerticalAlignment="Center" HorizontalAlignment="Center" />
        </Border>

        <!-- Speed selection -->
        <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Label>1x</Label>
            <Label>2x</Label>
        </StackPanel>

        <!-- Main area -->
        <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Background="DarkGray" HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch" />

        <!-- Timer -->
        <StackPanel Grid.Row="2" Grid.Column="2" VerticalAlignment="Bottom">
            <StackPanel Orientation="Horizontal" Margin="10, 0">
                <TextBlock Text="{Binding MsWhole, StringFormat='{}{0},'}" FontSize="24"></TextBlock>
                <TextBlock Text="{Binding MsDecimal}" Margin="0, 10, 0, 0"></TextBlock>
            </StackPanel>
            <TextBlock Text="ms" Margin="10, 10"></TextBlock>
        </StackPanel>
    </Grid>

</Window>